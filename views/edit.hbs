<div class="container mt-5">
  <div class="row mb-5">
    <div class="col-sm-2"></div>
    <div class="col-sm-2"><strong> * = Required</strong></div>
    <div class="col-sm-4 text-center"><strong>Pleast Edit Your Expense</strong></div>
  </div>

  <form action="/expense/{{ record._id }}?_method=PUT" method="POST">
    <div class="row mb-5">
      <div class="col-sm-2"></div>
      <label for="name" class="col-sm-2 col-form-label">*Name: </label>
      <div class="col-sm-4">
        <input type="text" id="name" name="name" value="{{ record.name }}" class="form-control" aria-describedby="expenseName" required>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-sm-2"></div>
      <label for="date" class="col-sm-2 col-form-label">*Date: </label>
      <div class="col-sm-4">
        <input type="date" id="date" name="date" value="{{record.date}}" class="form-control" aria-describedby="expenseDate" required>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-sm-2"></div>
      <label for="category" class="col-sm-2 col-form-label">*Category: </label>
      <div class="col-sm-4">
        <select class="form-select" name="category" id="category">
          <option selected disabled hidden>Choose...</option>
          {{#each categories}}
          <option value="{{this._id}}" {{#ifEqual this.name ../record.categoryId.name}}selected{{/ifEqual}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-sm-2"></div>
      <label for="amount" class="col-sm-2 col-form-label">*Amount: </label>
      <div class="col-sm-4">
        <input type="number" id="amount" name="amount" value="{{ record.amount }}" class="form-control" aria-describedby="expenseAmount" required>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-sm-4"></div>
      <div class="col-sm-4 text-center">
        <button type="submit" class="btn btn-outline-dark" style="width: 100%;">Edit</button>
      </div>
    </div>
  </form>
</div>