<div class="container mt-5">
  <div class="row g-3 align-items-center justify-content-evenly mb-4">
    <div class="col-auto">*required</div>
    <div class="col-auto">Pleast input your expense</div>
    <div class="col-auto"></div>
  </div>

  <form action="/expense/{{ record._id }}?_method=PUT" method="POST">
    <div class="row g-3 align-items-center justify-content-evenly mb-4">
      <div class="col-auto">
        <label for="name" class="col-form-label">*Name: </label>
      </div>
      <div class="col-auto">
        <input type="text" id="name" name="name" value="{{ record.name }}" class="form-control" aria-describedby="expenseName" required>
      </div>
      <div class="col-auto">
      </div>
    </div>

    <div class="row g-3 align-items-center justify-content-evenly mb-4">
      <div class="col-auto">
        <label for="date" class="col-form-label">*Date: </label>
      </div>
      <div class="col-auto">
        <input type="date" id="date" name="date" value="{{ record.date }}" class="form-control" aria-describedby="expenseDate" required>
      </div>
      <div class="col-auto">
      </div>
    </div>

    <div class="row g-3 align-items-center justify-content-evenly mb-4">
      <div class="col-auto">
        <label for="category" class="col-form-label">*Category: </label>
      </div>
      <div class="col-auto">
        <select class="form-select" name="category" id="category" required>
          <option selected disabled hidden>Choose...</option>
          {{#each categories}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-auto">
      </div>
    </div>

    <div class="row g-3 align-items-center justify-content-evenly mb-4">
      <div class="col-auto">
        <label for="amount" class="col-form-label">*Amount: </label>
      </div>
      <div class="col-auto">
        <input type="number" id="amount" name="amount" value="{{ record.amount }}" class="form-control" aria-describedby="expenseAmount" required>
      </div>
      <div class="col-auto">
      </div>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">Add Expense</button>
    </div>
  </form>
</div>