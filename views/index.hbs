<div class="container mt-5">
  <!-- Category Dropdowns -->
  <div class="dropdown text-center">
    <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown"
      aria-expanded="false" style="width: 300px;">
      Category
    </button>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item" href="?categoryId= ">所有類別</a></li>
      {{#each categories}}
      <li><a class="dropdown-item" href="?categoryId={{this._id}}">{{this.name}}</a></li>
      {{/each}}
    </ul>
  </div>
  <!-- Total Amonunt Counter -->
  <div class="mt-3 text-center">
    <div class="mx-auto" style="width: 300px;">
      <p class="text-start mb-0">Total Amount: </p>
      <p class="text-end" style="font-size: 54px; font-weight:600; color:orangered;">{{totalAmount}}</p>
    </div>
  </div>
  <!-- Record Table -->
  <table class="table table-striped mx-auto" style="width: 600px;">
    <tbody>
      {{#each records}}
      <tr>
        <th class="align-middle text-center" scope="row"><i class="{{this.categoryId.icon}} fa-2xl" style="color:#07B1BC;"></i></th>
        <td>{{this.name}}<br>{{this.date}}</td>
        <td class="align-middle">{{this.amount}}</td>
        <td class="align-middle text-center">
          <form action="/expense/{{this._id}}?_method=DELETE" method="POST">
            <a href="/expense/{{this._id}}/edit" class="text-decoration-none" style="color:#343a40;">修改</a>
            <button class="btn btn-link text-decoration-none" type="submit" style="color:#343a40;">刪除</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <!-- Add Expense Button -->
  <div class="text-center">
    <a href="/expense/new" type="button" class="btn mt-3" style="width: 300px; background-color:orangered; color:whitesmoke">Add Expense</a>
  </div>
</div>